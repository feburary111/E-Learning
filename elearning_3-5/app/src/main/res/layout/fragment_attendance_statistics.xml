<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/px_1032"
        android:layout_height="@dimen/px_355"
        android:layout_marginStart="@dimen/px_24"
        android:layout_marginTop="@dimen/px_29"
        android:background="@drawable/bg_border_radius">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_49"
            android:layout_marginStart="@dimen/px_38"
            android:gravity="center_vertical">

            <com.example.smartclass.util.CircleBarView
                android:id="@+id/attendanceStatisticsCircleProgressBar"
                android:layout_width="@dimen/px_252"
                android:layout_height="@dimen/px_252"
                app:start_angle="270"
                app:sweep_angle="360"
                app:bg_color="@android:color/transparent"
                app:bar_width="8dp"/>

            <TextView
                android:id="@+id/attendanceStatisticsProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_91"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/px_54"
                android:textColor="@color/colorMainGray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_145"
                android:layout_centerHorizontal="true"
                android:text="@string/attendance"
                android:textSize="@dimen/px_28"
                android:textColor="@color/colorAttendance"/>

        </RelativeLayout>

        <!--Late-->
        <RelativeLayout
            android:layout_width="@dimen/px_121"
            android:layout_height="@dimen/px_121"
            android:layout_marginTop="@dimen/px_38"
            android:layout_marginStart="@dimen/px_321"
            android:background="@drawable/ic_ring">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/late"
                android:textSize="@dimen/px_40"
                android:textColor="@color/colorSubtitle"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/px_280"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_81"
            android:layout_marginStart="@dimen/px_467">

            <TextView
                android:id="@+id/currentPersonOfLateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_48"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorUnelectedText"
                android:text="@string/backslash" />

            <TextView
                android:id="@+id/currentOverallPersonOfLateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorUnelectedText"/>

        </LinearLayout>

        <!--Absentee-->
        <RelativeLayout
            android:layout_width="@dimen/px_121"
            android:layout_height="@dimen/px_121"
            android:layout_marginTop="@dimen/px_38"
            android:layout_marginStart="@dimen/px_668"
            android:background="@drawable/ic_ring">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/ask_for_leave"
                android:textSize="@dimen/px_40"
                android:textColor="@color/colorSubtitle"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/px_280"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_81"
            android:layout_marginStart="@dimen/px_814">

            <TextView
                android:id="@+id/currentPersonOfAbsenteeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_48"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorUnelectedText"
                android:text="@string/backslash" />

            <TextView
                android:id="@+id/currentOverallPersonOfAbsenteeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorUnelectedText"/>

        </LinearLayout>

        <!--LeaveEarly-->
        <RelativeLayout
            android:layout_width="@dimen/px_121"
            android:layout_height="@dimen/px_121"
            android:layout_marginTop="@dimen/px_198"
            android:layout_marginStart="@dimen/px_321"
            android:background="@drawable/ic_ring">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/leave_early"
                android:textSize="@dimen/px_40"
                android:textColor="@color/colorSubtitle"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/px_280"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_240"
            android:layout_marginStart="@dimen/px_467">

            <TextView
                android:id="@+id/currentPersonOfLeaveEarlyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_48"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorUnelectedText"
                android:text="@string/backslash" />

            <TextView
                android:id="@+id/currentOverallPersonOfLeaveEarlyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorUnelectedText"/>

        </LinearLayout>

        <!--Abnormal-->
        <RelativeLayout
            android:layout_width="@dimen/px_121"
            android:layout_height="@dimen/px_121"
            android:layout_marginTop="@dimen/px_198"
            android:layout_marginStart="@dimen/px_668"
            android:background="@drawable/ic_ring">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/ask_for_leave"
                android:textSize="@dimen/px_40"
                android:textColor="@color/colorSubtitle"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/px_280"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_240"
            android:layout_marginStart="@dimen/px_814">

            <TextView
                android:id="@+id/currentPersonOfAbnormalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_48"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorUnelectedText"
                android:text="@string/backslash" />

            <TextView
                android:id="@+id/currentOverallPersonOfAbnormalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorUnelectedText"/>

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/px_1032"
        android:layout_height="@dimen/px_552"
        android:layout_marginTop="@dimen/px_409"
        android:layout_marginStart="@dimen/px_24"
        android:background="@drawable/bg_border_radius">

        <LinearLayout
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="@dimen/px_121"
                android:layout_height="@dimen/px_121"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_30"
                android:text="@string/loading_text"/>

        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/attendanceStatisticsTabLayout"
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            android:textColor="@drawable/text_tab_selector"
            app:tabIndicatorHeight="0dp"
            app:tabBackground="@android:color/transparent"
            app:tabRippleColor="@android:color/transparent">

        </android.support.design.widget.TabLayout>

        <View
            android:id="@+id/leftOfFirstTabOfAttendance"
            android:layout_width="@dimen/px_499"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_17"
            android:background="@drawable/color_gradient"/>

        <View
            android:id="@+id/rightOfFirstTabOfAttendance"
            android:layout_width="@dimen/px_499"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_516"
            android:visibility="invisible"
            android:background="@drawable/color_gradient"/>

        <View
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_2"
            android:layout_marginTop="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            android:background="@color/colorUnderLine"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/attendanceStatisticsViewPager"
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_457"
            android:layout_marginTop="@dimen/px_95"
            android:layout_marginStart="@dimen/px_17">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>

    <!--next view-->
    <RelativeLayout
        android:layout_width="@dimen/px_1032"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_986"
        android:layout_marginStart="@dimen/px_24"
        android:background="@drawable/bg_border_radius">

        <android.support.design.widget.TabLayout
            android:id="@+id/studentsWithAttendanceProblemsTabLayout"
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            app:tabIndicatorHeight="0dp"
            android:textColor="@drawable/text_tab_selector"
            app:tabBackground="@android:color/transparent"
            app:tabRippleColor="@android:color/transparent">

        </android.support.design.widget.TabLayout>

        <View
            android:id="@+id/leftOfSecondTabOfAttendance"
            android:layout_width="@dimen/px_250"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_17"
            android:background="@drawable/color_gradient"/>

        <View
            android:id="@+id/leftMidOfSecondTabOfAttendance"
            android:layout_width="@dimen/px_249"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_267"
            android:visibility="invisible"
            android:background="@drawable/color_gradient"/>

        <View
            android:id="@+id/rightMidOfSecondTabOfAttendance"
            android:layout_width="@dimen/px_249"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_516"
            android:visibility="invisible"
            android:background="@drawable/color_gradient"/>

        <View
            android:id="@+id/rightOfSecondTabOfAttendance"
            android:layout_width="@dimen/px_250"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_765"
            android:visibility="invisible"
            android:background="@drawable/color_gradient"/>

        <View
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_2"
            android:layout_marginTop="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            android:background="@color/colorUnderLine"/>

        <com.example.smartclass.util.WrapContentHeightViewPager
            android:id="@+id/studentsWithAttendanceProblemsViewPager"
            android:layout_width="@dimen/px_1032"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_95">

        </com.example.smartclass.util.WrapContentHeightViewPager>

    </RelativeLayout>

</RelativeLayout>