<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
        android:layout_height="@dimen/px_109"
        android:background="@color/colorWhite"
        android:id="@+id/AttendanceStatisticsToolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/backFromStudentStatus"
            android:layout_width="@dimen/px_21"
            android:layout_height="@dimen/px_40"
            android:layout_marginTop="@dimen/px_35"
            android:layout_marginStart="@dimen/px_56"
            app:srcCompat="@mipmap/icon_27"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px_380"
            android:text="@string/student_status"
            android:textColor="@color/colorMainGray"
            android:textSize="@dimen/px_42"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <FrameLayout
            android:id="@+id/studentStatusContentFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>
    </ScrollView>

</LinearLayout>