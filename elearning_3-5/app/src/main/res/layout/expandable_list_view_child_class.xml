    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/px_1032"
        android:layout_height="@dimen/px_552"
        android:layout_marginStart="@dimen/px_24"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17">

            <RelativeLayout
                android:id="@+id/tabLeftView"
                android:layout_width="@dimen/px_499"
                android:layout_height="@dimen/px_93">

                <TextView
                    android:id="@+id/tabLeftText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_42"
                    android:textColor="@color/colorThemeTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tabRightView"
                android:layout_width="@dimen/px_499"
                android:layout_height="@dimen/px_93"
                android:layout_marginStart="@dimen/px_499">

                <TextView
                    android:id="@+id/tabRightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_42"
                    android:textColor="@color/colorTextColorHint"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/leftOfFirstTabOfClassRecentRecord"
            android:layout_width="@dimen/px_499"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_17"
            android:background="@drawable/color_gradient"/>

        <View
            android:id="@+id/rightOfFirstTabOfClassRecentRecord"
            android:layout_width="@dimen/px_499"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_516"
            android:visibility="invisible"
            android:background="@drawable/color_gradient"/>

        <View
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_2"
            android:layout_marginTop="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            android:background="@color/colorUnderLine"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/recentClassAttendanceLineChart"
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_432"
            android:layout_marginTop="@dimen/px_95"
            android:layout_marginStart="@dimen/px_17">

        </com.github.mikephil.charting.charts.LineChart>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/recentClassStateLineChart"
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_432"
            android:layout_marginTop="@dimen/px_95"
            android:layout_marginStart="@dimen/px_17"
            android:visibility="invisible">

        </com.github.mikephil.charting.charts.LineChart>

    </RelativeLayout>

    <!--next view-->

    <RelativeLayout
        android:layout_width="@dimen/px_1032"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_552"
        android:layout_marginStart="@dimen/px_24"
        android:background="@drawable/bg_bottom_border_radius">

        <RelativeLayout
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17">

            <RelativeLayout
                android:id="@+id/tabFirstView"
                android:layout_width="@dimen/px_249"
                android:layout_height="@dimen/px_93">

                <TextView
                    android:id="@+id/tabFirstText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_42"
                    android:textColor="@color/colorTextColorHint"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tabSecondView"
                android:layout_width="@dimen/px_250"
                android:layout_height="@dimen/px_93"
                android:layout_marginStart="@dimen/px_249">

                <TextView
                    android:id="@+id/tabSecondText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_42"
                    android:textColor="@color/colorTextColorHint"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tabThirdView"
                android:layout_width="@dimen/px_250"
                android:layout_height="@dimen/px_93"
                android:layout_marginStart="@dimen/px_499">

                <TextView
                    android:id="@+id/tabThirdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_42"
                    android:textColor="@color/colorTextColorHint"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tabFourthView"
                android:layout_width="@dimen/px_249"
                android:layout_height="@dimen/px_93"
                android:layout_marginStart="@dimen/px_749">

                <TextView
                    android:id="@+id/tabFourthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_42"
                    android:textColor="@color/colorTextColorHint"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/leftOfSecondTabOfClassRecentRecord"
            android:layout_width="@dimen/px_250"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_17"
            android:visibility="invisible"
            android:background="@drawable/color_gradient"/>

        <View
            android:id="@+id/leftMidOfSecondTabOfClassRecentRecord"
            android:layout_width="@dimen/px_249"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_267"
            android:visibility="invisible"
            android:background="@drawable/color_gradient"/>

        <View
            android:id="@+id/rightMidOfSecondTabOfClassRecentRecord"
            android:layout_width="@dimen/px_249"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_516"
