            android:background="@drawable/color_gradient"/>

        <View
            android:id="@+id/rightOfSecondTabOfClassRecentRecord"
            android:layout_width="@dimen/px_250"
            android:layout_height="@dimen/px_5"
            android:layout_marginTop="@dimen/px_90"
            android:layout_marginStart="@dimen/px_765"
            android:visibility="invisible"
            android:background="@drawable/color_gradient"/>

        <View
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_2"
            android:layout_marginTop="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            android:background="@color/colorUnderLine"/>

        <RelativeLayout
            android:id="@+id/tabPromptText"
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_117"
            android:layout_marginTop="@dimen/px_95">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables,UselessParent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/click_to_see_details"
                    android:textColor="@color/colorUnelectedText"
                    android:textSize="@dimen/px_34"/>
                
                <ImageView
                    android:layout_width="@dimen/px_64"
                    android:layout_height="@dimen/px_64"
                    android:layout_marginStart="@dimen/px_19"
                    app:srcCompat="@mipmap/ic_launcher_round"
                    tools:ignore="ContentDescription" />
                
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tabTitleDetailsText"
            android:layout_width="@dimen/px_1032"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_95"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="@dimen/px_40"
                android:layout_marginTop="@dimen/px_41"
                android:layout_marginStart="@dimen/px_41"
                android:background="@color/colorSubtitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_name"
                android:textColor="@color/colorSubtitle"
                android:textSize="@dimen/px_40"
                android:layout_marginTop="@dimen/px_41"
                android:layout_marginStart="@dimen/px_49"/>

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="@dimen/px_40"
                android:layout_marginTop="@dimen/px_41"
                android:layout_marginStart="@dimen/px_461"
                android:background="@color/colorSubtitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/colorSubtitle"
                android:textSize="@dimen/px_40"
                android:layout_marginTop="@dimen/px_41"
                android:layout_marginStart="@dimen/px_469"/>

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="@dimen/px_40"
                android:layout_marginTop="@dimen/px_41"
                android:layout_marginStart="@dimen/px_706"
                android:background="@color/colorSubtitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/student_id"
                android:textColor="@color/colorSubtitle"
                android:textSize="@dimen/px_40"
                android:layout_marginTop="@dimen/px_41"
                android:layout_marginStart="@dimen/px_714"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/firstTabRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginTop="@dimen/px_112"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/secondTabRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginTop="@dimen/px_112"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/thirdTabRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginTop="@dimen/px_112"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fourthTabRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginTop="@dimen/px_112"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

